:javascript

  function set_installer_visibility() {
    var installer = document.getElementById('installer');
    var progress = document.getElementById('progress');
    if (document.getElementById("FOCUSSTREAK_INSTALLED")) {
      installer.style.display = 'none';
      progress.style.display = 'visible';
    } else {
      installer.style.display = 'visible';
      progress.style.display = 'none';
    }
  }

  function install_plugin() {
    chrome.webstore.install('https://chrome.google.com/webstore/detail/mpifekaiabpalokkgbkeejmfofpohfdn', set_installer_visibility);
  }

  set_installer_visibility();
